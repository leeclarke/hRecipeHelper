{
  "name": "hRecipe Helper",
  "version": "1.1.2",
  "description": "A tool to help format your recipes in the Google Recipe View friendly hRecipe micro-format.",
  "icons": { "16": "hRecipeIcon-16.png",
           "48": "hRecipeIcon-48.png",
           "128": "hRecipeIcon-128.png"},

  "background_page": "background.html",
  "browser_action": {
    "default_icon": "hRecipeIcon-16.png",
    "popup": "popup.html"
  },
  "permissions": [
	"tabs",    
	"http://*/*",
	"https://*/*"
  ],
  "minimum_chrome_version": "8.0"
}
